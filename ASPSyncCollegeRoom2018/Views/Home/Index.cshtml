@{
    ViewData["Title"] = "Home Page";
    //https://help.syncfusion.com/aspnet-core/schedule/getting-started
}

@using Syncfusion.JavaScript;


<div>
    <ej-schedule id="Schedule1" width="100%" height="525px" current-date="@ViewBag.CurrentDate" orientation="Horizontal" show-weekend="false" start-hour="8" end-hour="18">


        <e-group resources="@ViewBag.Grouping"></e-group>

        <e-resources>
            <e-resource field="RoomId" title="Room" name="Rooms" allow-multiple=false>
                <e-resource-settings datasource="@ViewBag.RoomData" text="Text" id="Id" group-id="GroupId" color="Color"> </e-resource-settings>
            </e-resource>

            <e-resource field="OwnerId" title="Owner" name="Owners" allow-multiple=true>
                <e-resource-settings datasource="@ViewBag.OwnerData" text="Text" id="Id" group-id="GroupId" color="Color"> </e-resource-settings>
            </e-resource>
        </e-resources>

        <e-appointment-settings id="Id" subject='"subject"' start-time='"startTime"' end-time='"endTime"' all-day='"AllDay"' recurrence='"Recurrence"' recurrence-rule='"RecurrenceRule"' description='"Description"' resource-fields='"RoomId,OwnerId"'>

            <e-datamanager url="Home/GetData" crud-url="Home/Batch" adaptor="UrlAdaptor"></e-datamanager>
        </e-appointment-settings>
    </ej-schedule>
</div>




